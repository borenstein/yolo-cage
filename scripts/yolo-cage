#!/usr/bin/env python3
"""yolo-cage CLI wrapper.

Runs the yolo_cage package from the repo or as installed.
"""

import sys
from pathlib import Path


def main():
    # Find repo root
    script_dir = Path(__file__).resolve().parent
    repo_root = script_dir.parent

    # Add repo to path so we can import yolo_cage
    sys.path.insert(0, str(repo_root))

    from yolo_cage.host.cli import main as cli_main
    cli_main()


if __name__ == "__main__":
    main()
